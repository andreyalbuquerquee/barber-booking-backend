{
  "compilerOptions": {
    "target": "ES2021",
    "module": "preserve",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
          "@application/*": ["application/*"],
          "@domain/*": ["domain/*"],
          "@infrastructure/*": ["infrastructure/*"]
        }
  },
  "include": ["src"],
  
}